<% if object.comments %>
  <div id="comments">
    <strong><%= object.comments.count %> Comments</strong><br />
    <% object.comments.each do |comment| %>
      <strong><%= comment.user.name %> said:</strong>
      <p>
        <%= comment.text%>
      </p>        
    <% end %>
  </div>
<% end %>
