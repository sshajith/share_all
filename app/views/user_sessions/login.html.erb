<% title "Log in" %>

<% form_for @user_session, :controller => "user_sessions", :action => "create", :method => :post do |f| %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>