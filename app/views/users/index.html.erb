<% title "Users" %>

<table>
  <tr>
    <th>Name</th>
    <th>Login</th>
    <th>Email</th>
    <th>Description</th>
    <th>Hometown</th>
    <th>Persistence Token</th>
    <th>Crypted Password</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%=h user.name %></td>
      <td><%=h user.login %></td>
      <td><%=h user.email %></td>
      <td><%=h user.description %></td>
      <td><%=h user.hometown %></td>
      <td><%=h user.persistence_token %></td>
      <td><%=h user.crypted_password %></td>
      <td><%= link_to "Show", user %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New User", new_user_path %></p>
