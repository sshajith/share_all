<% title "User" %>

<p>
  <strong>Name:</strong>
  <%=h @user.name %>
</p>
<p>
  <strong>Login:</strong>
  <%=h @user.login %>
</p>
<p>
  <strong>Email:</strong>
  <%=h @user.email %>
</p>
<p>
  <strong>Description:</strong>
  <%=h @user.description %>
</p>
<p>
  <strong>Hometown:</strong>
  <%=h @user.hometown %>
</p>
<p>
  <strong>Persistence Token:</strong>
  <%=h @user.persistence_token %>
</p>
<p>
  <strong>Crypted Password:</strong>
  <%=h @user.crypted_password %>
</p>

<p>
  <%= link_to "Edit", edit_user_path(@user) %> |
  <%= link_to "Destroy", @user, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", users_path %>
</p>
