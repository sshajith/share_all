<% title "Events" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Local</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>User</th>
  </tr>
  <% for event in @events %>
    <tr>
      <td><%=h event.name %></td>
      <td><%=h event.description %></td>
      <td><%=h event.local %></td>
      <td><%=h event.start_time %></td>
      <td><%=h event.end_time %></td>
      <td><%=h event.latitude %></td>
      <td><%=h event.longitude %></td>
      <td><%=h event.user %></td>
      <td><%= link_to "Show", event %></td>
      <td><%= link_to "Edit", edit_event_path(event) %></td>
      <td><%= link_to "Destroy", event, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Event", new_event_path %></p>
