<% title "Events" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Local</th>
    <th>Start Time</th>
  </tr>
  <% for event in @events %>
    <tr>
      <td><%=h event.name %></td>
      <td><%=h event.description %></td>
      <td><%=h event.location %></td>
      <td><%=h event.start_time %></td>      
      <td><%= link_to "Show", [event.user, event] %></td> 
      <% if @current_user == event.user %>
        <td><%= link_to "Edit", edit_user_event_path(event.user, event) %></td>
        <td><%= link_to "Destroy", [event.user, event], :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Event", new_user_event_path(@current_user) %></p>
