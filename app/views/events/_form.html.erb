<% semantic_form_for [@current_user, @event] do |f| %>
  <%= content_tag(:h1, yield(:title))%>
  <%= f.error_messages %>
  <% f.inputs @event do %>
    <p>
      <%= f.input :name, :required => true %>
    </p>
    <p>
      <%= f.input :description, :as => :text, :required => false %>
    </p>
    <p>
      <%= f.input :location, :required => true %>
    </p>
    <p>
      <%= f.input :start_time, :required => false %>
    </p>
    <p>
      <%= f.input :end_time, :required => false%>
    </p>
    <p>
      <%= f.input :latitude, :required => false %>
    </p>
    <p>                                                 
      <%= f.input :longitude, :required => false %>
    </p>                                                  
  <% end %>
  <% f.buttons do %>  
    <p><%= f.commit_button %></p>
  <% end %>
<% end %>
