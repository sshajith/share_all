<% title "Albums" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>User</th>
  </tr>
  <% for album in @albums %>
    <tr>
      <td><%=h album.name %></td>
      <td><%=h album.description %></td>
      <td><%=h album.user.name %></td>
      <td><%= link_to "Show", [album.user, album] %></td>
      <td><%= link_to "Edit", edit_user_album_path(album.user, album) %></td>
      <td><%= link_to "Destroy", [album.user, album], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Album", new_user_album_path(@current_user) %></p>
