<% semantic_form_for [@current_user, @document], :html => {:multipart => true} do |f| %>
  <%= f.error_messages %> 
  <% f.inputs @document do %>
    <p>
      <%= f.input :name, :required => true %>
    </p>
    <p>
      <%= f.input :file, :as => :file, :required => true %>
    </p>    
  <% end %>
  <% f.buttons do %>  
    <p><%= f.commit_button %></p>
  <% end %>
<% end %>
