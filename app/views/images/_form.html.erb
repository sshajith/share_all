<% semantic_form_for [@current_user, @image], :html => {:multipart => true} do |f| %>
  <%= content_tag(:h1, yield(:title))%>
  <% f.inputs @image do %>
    <p>
      <%= f.input :name %>
    </p>
    <p>
      <%= f.input :author %>
    </p>
    <p>
      <%= f.input :image, :as => :file, :required => true %>
    </p>
  <% end %>
  <% f.buttons do %>  
    <p><%= f.commit_button %></p>
  <% end %>
<% end %>
