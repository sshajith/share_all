<% title "Images" %>

<table>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>User</th>
  </tr>
  <% for image in @images %>
    <tr>
      <td><%=h image.name %></td>
      <td><%=h image.author %></td>
      <td><%=h image.user.name %></td>
      <td><%= link_to "Show", [image.user, image] %></td>
      <td><%= link_to "Edit", edit_user_image_path(image.user, image) %></td>
      <td><%= link_to "Destroy", [image.user, image], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Image", new_user_image_path(@current_user) %></p>
