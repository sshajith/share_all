<% title "Videos" %>

<table>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>User</th>
  </tr>
  <% for video in @videos %>
    <tr>
      <td><%=h video.name %></td>
      <td><%=h video.author %></td>
      <td><%=h video.user.name %></td>
      <td><%= link_to "Show", [video.user, video] %></td>    
      <% if @current_user == video.user %>
        <td><%= link_to "Edit", edit_user_video_path(video.user, video) %></td>
        <td><%= link_to "Destroy", [video.user, video], :confirm => 'Are you sure?', :method => :delete %></td>  
      <% end %>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Video", new_user_video_path(@current_user) %></p>
